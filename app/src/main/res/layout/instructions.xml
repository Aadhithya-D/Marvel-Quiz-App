<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:background="@color/background"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSTRUCTIONS:-"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-->ALL THE QUESTIONS MUST BE ANSWERED."
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-->AFTER SELECTING THE OPTION CLICK SUBMIT."
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-->DO NOT REFER THE INTERNET IF YOU ARE A TRUE MARVEL FAN."
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-->ALL THE QUESTIONS WILL ONLY BE FROM THE MCU SO WATCH ALL THE MOVIES BEFORE TAKING THE QUIZ."
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-->ONLY ONE OPTION N MUST BE SELECTED"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-->ALL THE BEST. MAY STAN LEE BE WITH YOU."
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="NEXT"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/background"
        android:textSize="30sp"
        android:layout_marginVertical="60dp"
        android:id="@+id/next"/>

    </LinearLayout>

    </ScrollView>
</LinearLayout>
